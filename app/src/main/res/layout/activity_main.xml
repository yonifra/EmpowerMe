<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView android:text="@string/empowerment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empowerText"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="@style/UiTestTextView"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.5"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_star_rate"
        fab:fab_colorNormal="#3F7CAC"
        fab:fab_colorPressed="#3F3B4E"
        fab:fab_colorRipple="#57E2E5" />

</FrameLayout>
